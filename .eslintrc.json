{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "space-before-function-paren": "off",
    "no-use-before-define": "off",
    "no-return-assign": "off",
    "spaced-comment": "warn",
    "no-extend-native": "off",
    "quotes": [
      "error",
      "single"
    ],
    "node/handle-callback-err": "off"
  }
}